---
import BaseLayout from '../layouts/BaseLayout.astro';
import ImageCarousel from '../components/ImageCarousel.astro';
import DailyVerse from '../components/DailyVerse.astro';
import VideoCarousel from '../components/VideoCarousel.astro';
import { getCollection } from 'astro:content';

const lang = 'en';
const base = '';

// get essay stats
const allEssays = await getCollection('essays');
const englishEssays = allEssays.filter(e => e.id.endsWith('.en.mdx'));
const essayCount = englishEssays.length;

// get featured essays with their claims
const featuredSlugs = ['violence-is-not-himsa', 'satya-truth-as-ontological', 'atman-not-soul'];
const featuredEssays = englishEssays
  .filter(e => featuredSlugs.some(slug => e.id.includes(slug)))
  .map(e => ({
    slug: e.id.replace('.en.mdx', ''),
    title: e.data.title,
    claim: e.data.claim,
    readingTime: e.data.reading_time,
    tags: e.data.tags,
  }));

// Ask Swami Sarvapriyananda videos - using actual "Ask Swami" series
const askSwamiVideos = [
  { id: 'aysKhiJoAZk', title: 'What is Advaita Vedanta?' },
  { id: 'H3YwsLiP7Cw', title: 'Who Am I?' },
  { id: '3LkfYFGGBKs', title: 'What is Maya?' },
  { id: 'gr0RVqKGez4', title: 'What is Consciousness?' },
  { id: 'X__e30dNSzQ', title: 'Is the World Real?' },
];
---

<BaseLayout
  title="Ayamatma"
  description="A quiet space where Vedanta, rigorous science, and clear thinking meet."
  lang={lang}
  showSplash={true}
>

  <!-- hero -->
  <section class="hero">
    <div class="hero-visual">
      <img src="/images/red-tree.png" alt="" class="hero-image" />
    </div>
    <h1 class="sutra">अयमात्मा ब्रह्म</h1>
    <p class="sutra-translit">Ayam Ātmā Brahma</p>
    <p class="tagline">A quiet space where Vedānta, rigorous science, and clear thinking meet.</p>
  </section>

  <!-- intro text -->
  <section class="section">
    <div class="prose intro-text">
      <p>
        This site springs from the mahāvākya <em>Ayam Ātmā Brahma</em>—this very Ātman is Brahman.
        We explore Upaniṣadic Vedānta using the tools of science and philosophy: precise definitions,
        clear arguments, and honest dialogue.
      </p>
    </div>
  </section>

  <!-- two column: start here + stats -->
  <section class="section two-col">
    <a href={`${base}/essays/atman-not-soul`} class="start-here-card">
      <span class="badge">New to Vedānta?</span>
      <h3>Start with "Ātman is Not Soul"</h3>
      <p>Our most-read essay explaining why Western translations of "soul" and "self" miss what the Upaniṣads actually mean.</p>
      <span class="cta">Read Essay →</span>
    </a>
    <div class="stats-box">
      <div class="stat"><span class="stat-num">{essayCount}</span><span class="stat-label">Essays</span></div>
      <div class="stat"><span class="stat-num">1600+</span><span class="stat-label">Dictionary Terms</span></div>
      <div class="stat"><span class="stat-num">3</span><span class="stat-label">Languages</span></div>
      <div class="stat"><span class="stat-num">Daily</span><span class="stat-label">Gītā Verse</span></div>
    </div>
  </section>

  <!-- featured essays -->
  <section class="section">
    <h2 class="section-title">Featured Essays</h2>
    <div class="featured-essays">
      {featuredEssays.map(essay => (
        <a href={`${base}/essays/${essay.slug}`} class="essay-card">
          <h3>{essay.title}</h3>
          <p class="claim">"{essay.claim}"</p>
          <div class="meta">
            <span class="time">{essay.readingTime} min read</span>
            <span class="langs">EN · हि · తె</span>
          </div>
        </a>
      ))}
    </div>
  </section>

  <!-- two column: explore + daily verse -->
  <section class="section two-col">
    <div class="explore-section">
      <h2 class="section-title">Explore</h2>
      <div class="explore-grid">
        <a href={`${base}/primer`} class="explore-item">
          <span class="explore-name">Primer</span>
          <span class="explore-desc">Core Vedāntic concepts explained</span>
        </a>
        <a href={`${base}/essays`} class="explore-item">
          <span class="explore-name">Essays</span>
          <span class="explore-desc">{essayCount} philosophical deep-dives</span>
        </a>
        <a href={`${base}/dictionary`} class="explore-item">
          <span class="explore-name">Dictionary</span>
          <span class="explore-desc">1600+ Sanskrit terms</span>
        </a>
        <a href={`${base}/science`} class="explore-item">
          <span class="explore-name">Science</span>
          <span class="explore-desc">Through a Vedāntic lens</span>
        </a>
        <a href={`${base}/manifesto`} class="explore-item">
          <span class="explore-name">Protocols</span>
          <span class="explore-desc">How we study with rigor</span>
        </a>
        <a href={`${base}/vada`} class="explore-item accent">
          <span class="explore-name">Vāda</span>
          <span class="explore-desc">Live philosophical dialogue</span>
        </a>
      </div>
    </div>
    <div class="daily-verse-wrapper">
      <DailyVerse lang={lang} />
    </div>
  </section>

  <!-- video carousel -->
  <section class="section">
    <VideoCarousel title="Ask Swami Sarvapriyananda" videos={askSwamiVideos} />
  </section>

  <!-- glimpses -->
  <section class="section">
    <h2 class="section-title">Glimpses</h2>
    <ImageCarousel />
  </section>

  <!-- footer quote -->
  <section class="section">
    <div class="quote-block">
      <p class="sanskrit">विद्या व्यये कृते वर्धते एव नित्यं।</p>
      <p class="english">Knowledge always grows when shared.</p>
    </div>
  </section>
</BaseLayout>

<style>
  /* intro text */
  .intro-text {
    max-width: 720px;
    font-size: 1.1rem;
    line-height: 1.7;
  }

  /* two column layout */
  .two-col {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: stretch;
  }

  /* start here card */
  .start-here-card {
    display: flex;
    flex-direction: column;
    border: 2px solid var(--accent-warm);
    border-radius: 12px;
    padding: 1.5rem 2rem;
    text-decoration: none;
    background: var(--bg-card);
    transition: transform 200ms ease, box-shadow 200ms ease;
  }

  .start-here-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
  }

  .start-here-card .badge {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent-warm);
    margin-bottom: 0.5rem;
  }

  .start-here-card h3 {
    font-family: var(--font-display, 'Fraunces', serif);
    font-size: 1.35rem;
    font-weight: 600;
    color: var(--text);
    margin: 0 0 0.75rem 0;
    line-height: 1.3;
  }

  .start-here-card p {
    color: var(--muted);
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
    flex-grow: 1;
  }

  .start-here-card .cta {
    margin-top: 1rem;
    font-weight: 600;
    color: var(--accent-warm);
    font-size: 0.95rem;
  }

  /* stats box */
  .stats-box {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1.5rem;
    padding: 1.5rem 2rem;
    background: var(--bg-card);
    border-radius: 12px;
    border: 1px solid var(--border);
  }

  .stat {
    display: flex;
    flex-direction: column;
  }

  .stat-num {
    font-family: var(--font-display, 'Fraunces', serif);
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text);
  }

  .stat-label {
    font-size: 0.9rem;
    color: var(--muted);
  }

  /* featured essays */
  .featured-essays {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1.5rem;
  }

  .essay-card {
    display: flex;
    flex-direction: column;
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 1.5rem;
    text-decoration: none;
    transition: border-color 200ms ease, transform 200ms ease;
  }

  .essay-card:hover {
    border-color: var(--accent-warm);
    transform: translateY(-2px);
  }

  .essay-card h3 {
    font-family: var(--font-display, 'Fraunces', serif);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text);
    margin: 0 0 0.75rem 0;
    line-height: 1.35;
  }

  .essay-card .claim {
    font-size: 0.9rem;
    color: var(--muted);
    line-height: 1.55;
    font-style: italic;
    margin: 0;
    flex-grow: 1;
  }

  .essay-card .meta {
    display: flex;
    justify-content: space-between;
    font-size: 0.8rem;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border);
  }

  .essay-card .time {
    color: var(--accent-warm);
    font-weight: 500;
  }

  .essay-card .langs {
    color: var(--muted);
  }

  /* explore section */
  .explore-section {
    display: flex;
    flex-direction: column;
  }

  .explore-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem;
  }

  .explore-item {
    display: flex;
    flex-direction: column;
    padding: 1rem 1.25rem;
    border: 1px solid var(--border);
    border-radius: 10px;
    text-decoration: none;
    transition: border-color 200ms ease, background 200ms ease;
  }

  .explore-item:hover {
    border-color: var(--accent-warm);
    background: var(--bg-card);
  }

  .explore-item.accent {
    border-color: var(--accent-cool);
    background: rgba(90, 155, 143, 0.08);
  }

  .explore-item.accent:hover {
    background: rgba(90, 155, 143, 0.15);
  }

  .explore-name {
    font-weight: 600;
    font-size: 1rem;
    color: var(--text);
    margin-bottom: 0.25rem;
  }

  .explore-desc {
    font-size: 0.85rem;
    color: var(--muted);
    line-height: 1.4;
  }

  /* daily verse wrapper */
  .daily-verse-wrapper {
    display: flex;
    flex-direction: column;
  }

  /* responsive */
  @media (max-width: 900px) {
    .two-col {
      grid-template-columns: 1fr;
    }

    .featured-essays {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .explore-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .stats-box {
      grid-template-columns: 1fr 1fr;
      gap: 1rem;
      padding: 1.25rem;
    }

    .explore-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
