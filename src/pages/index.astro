<style>
  /* start here callout - compact */
  .start-here-card {
    display: block;
    border-left: 3px solid var(--accent-warm);
    padding: 0.75rem 1rem;
    text-decoration: none;
    transition: background 200ms ease;
  }

  .start-here-card:hover {
    background: var(--accent-warm-soft);
  }

  .start-here-badge {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent-warm);
  }

  .start-here-title {
    font-family: var(--font-display, 'Fraunces', serif);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text);
    margin: 0.25rem 0 0.35rem 0;
  }

  .start-here-desc {
    color: var(--muted);
    font-size: 0.95rem;
    line-height: 1.5;
    margin: 0;
  }

  .start-here-cta {
    display: none;
  }

  /* stats grid - compact inline */
  .stats-grid {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem 1.5rem;
  }

  .stat-item {
    display: flex;
    align-items: center;
    gap: 0.4rem;
  }

  .stat-icon {
    font-size: 1rem;
  }

  .stat-number {
    font-size: 1rem;
    font-weight: 600;
    color: var(--text);
  }

  .stat-desc {
    font-size: 0.9rem;
    color: var(--muted);
  }

  /* vada highlight - compact */
  .vada-highlight {
    border-left: 3px solid var(--accent-cool);
    padding: 0.75rem 1rem;
  }

  .vada-highlight::before {
    display: none;
  }

  .vada-badge {
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent-cool);
  }

  .vada-title {
    font-family: var(--font-display, 'Fraunces', serif);
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text);
    margin: 0.25rem 0 0.35rem 0;
  }

  .vada-desc {
    color: var(--muted);
    font-size: 0.95rem;
    line-height: 1.5;
    margin: 0 0 0.75rem 0;
  }

  .vada-actions {
    display: flex;
    gap: 1rem;
  }

  .vada-btn {
    font-size: 0.9rem;
    font-weight: 500;
    text-decoration: none;
    color: var(--accent-cool);
  }

  .vada-btn:hover {
    text-decoration: underline;
  }

  .vada-btn.primary::after,
  .vada-btn.secondary::after {
