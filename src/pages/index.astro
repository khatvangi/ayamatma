---
import BaseLayout from '../layouts/BaseLayout.astro';
import RecentEssays from '../components/RecentEssays.astro';
import DailyVerse from '../components/DailyVerse.astro';
import VideoCarousel from '../components/VideoCarousel.astro';
import { getCollection } from 'astro:content';

const lang = 'en';
const base = '';

// get essay stats
const allEssays = await getCollection('essays');
const englishEssays = allEssays.filter(e => e.id.endsWith('.en.mdx'));
const essayCount = englishEssays.length;

// get featured essays with their claims
const featuredSlugs = ['violence-is-not-himsa', 'satya-truth-as-ontological', 'atman-not-soul'];
const featuredEssays = englishEssays
  .filter(e => featuredSlugs.some(slug => e.id.includes(slug)))
  .map(e => ({
    slug: e.id.replace('.en.mdx', ''),
    title: e.data.title,
    claim: e.data.claim,
    readingTime: e.data.reading_time,
    tags: e.data.tags,
  }));

// Ask Swami Sarvapriyananda videos
const askSwamiVideos = [
  { id: 'eGKFWc1C7rc', title: 'What is Consciousness?' },
  { id: '0pVvhPJAu5Q', title: 'Who Am I?' },
  { id: 'rPKZ1ypUQYs', title: 'Is the World Real?' },
  { id: 'BCT33RLkrf4', title: 'What is Brahman?' },
  { id: 'LiLpKaKaVRM', title: 'What Happens After Death?' },
];
---

<BaseLayout
  title="Ayamatma"
  description="A quiet space where Vedanta, rigorous science, and clear thinking meet."
  lang={lang}
  showSplash={true}
>

  <!-- hero -->
  <section class="hero">
    <div class="hero-visual">
      <img src="/images/red-tree.png" alt="" class="hero-image" />
    </div>
    <h1 class="sutra">अयमात्मा ब्रह्म</h1>
    <p class="sutra-translit">Ayam Ātmā Brahma</p>
    <p class="tagline">A quiet space where Vedānta, rigorous science, and clear thinking meet.</p>
  </section>

  <!-- row 1: intro + stats -->
  <section class="section bento-row">
    <div class="bento-main">
      <a href={`${base}/essays/atman-not-soul`} class="start-here-card">
        <span class="badge warm">New to Vedānta?</span>
        <h3>Start with "Ātman is Not Soul"</h3>
        <p>Why Western translations miss what the Upaniṣads actually mean.</p>
      </a>
    </div>
    <div class="bento-side">
      <div class="stats-compact">
        <div class="stat"><strong>{essayCount}</strong> Essays</div>
        <div class="stat"><strong>1600+</strong> Dictionary terms</div>
        <div class="stat"><strong>3</strong> Languages</div>
        <div class="stat"><strong>Daily</strong> Gītā verse</div>
      </div>
    </div>
  </section>

  <!-- row 2: featured essays -->
  <section class="section">
    <h2 class="section-title">Featured Essays</h2>
    <div class="featured-essays">
      {featuredEssays.map(essay => (
        <a href={`${base}/essays/${essay.slug}`} class="essay-card">
          <h3>{essay.title}</h3>
          <p class="claim">"{essay.claim}"</p>
          <span class="meta">{essay.readingTime} min · EN · हि · తె</span>
        </a>
      ))}
    </div>
  </section>

  <!-- row 3: explore + daily verse -->
  <section class="section bento-row">
    <div class="bento-main">
      <h2 class="section-title">Explore</h2>
      <div class="explore-grid">
        <a href={`${base}/primer`} class="explore-item">
          <span class="explore-name">Primer</span>
          <span class="explore-desc">Core concepts</span>
        </a>
        <a href={`${base}/essays`} class="explore-item">
          <span class="explore-name">Essays</span>
          <span class="explore-desc">{essayCount} deep-dives</span>
        </a>
        <a href={`${base}/dictionary`} class="explore-item">
          <span class="explore-name">Dictionary</span>
          <span class="explore-desc">1600+ terms</span>
        </a>
        <a href={`${base}/science`} class="explore-item">
          <span class="explore-name">Science</span>
          <span class="explore-desc">Vedāntic lens</span>
        </a>
        <a href={`${base}/manifesto`} class="explore-item">
          <span class="explore-name">Protocols</span>
          <span class="explore-desc">Our methodology</span>
        </a>
        <a href={`${base}/vada`} class="explore-item accent">
          <span class="explore-name">Vāda</span>
          <span class="explore-desc">Live dialogue</span>
        </a>
      </div>
    </div>
    <div class="bento-side">
      <DailyVerse lang={lang} />
    </div>
  </section>

  <!-- row 4: videos + vada -->
  <section class="section bento-row">
    <div class="bento-main">
      <VideoCarousel title="Ask Swami Sarvapriyananda" videos={askSwamiVideos} />
    </div>
    <div class="bento-side">
      <div class="vada-card">
        <span class="badge cool">Live</span>
        <h3>Vāda — Dialogue</h3>
        <p>Join audio discussions or leave voice messages. Philosophy is meant to be discussed.</p>
        <a href={`${base}/vada`} class="vada-link">Enter →</a>
      </div>
    </div>
  </section>

  <!-- row 5: recent essays -->
  <section class="section">
    <RecentEssays />
  </section>

  <!-- footer quote -->
  <section class="section">
    <div class="quote-block">
      <p class="sanskrit">विद्या व्यये कृते वर्धते एव नित्यं।</p>
      <p class="english">Knowledge always grows when shared.</p>
    </div>
  </section>
</BaseLayout>

<style>
  /* bento layout */
  .bento-row {
    display: grid;
    grid-template-columns: 1fr 320px;
    gap: 1.5rem;
    align-items: start;
  }

  .bento-main {
    min-width: 0;
  }

  .bento-side {
    min-width: 0;
  }

  /* start here card */
  .start-here-card {
    display: block;
    border-left: 3px solid var(--accent-warm);
    padding: 1rem 1.25rem;
    text-decoration: none;
    background: var(--bg-card);
    border-radius: 0 8px 8px 0;
    transition: background 200ms ease;
  }

  .start-here-card:hover {
    background: var(--accent-warm-soft);
  }

  .start-here-card h3 {
    font-family: var(--font-display, 'Fraunces', serif);
    font-size: 1.15rem;
    font-weight: 600;
    color: var(--text);
    margin: 0.25rem 0 0.35rem 0;
  }

  .start-here-card p {
    color: var(--muted);
    font-size: 0.9rem;
    line-height: 1.4;
    margin: 0;
  }

  /* badges */
  .badge {
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .badge.warm { color: var(--accent-warm); }
  .badge.cool { color: var(--accent-cool); }

  /* stats compact */
  .stats-compact {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.75rem;
    padding: 1rem;
    background: var(--bg-card);
    border-radius: 8px;
    border: 1px solid var(--border);
  }

  .stat {
    font-size: 0.85rem;
    color: var(--muted);
  }

  .stat strong {
    color: var(--text);
    font-weight: 600;
  }

  /* featured essays */
  .featured-essays {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
  }

  .essay-card {
    display: flex;
    flex-direction: column;
    border: 1px solid var(--border);
    border-radius: 8px;
    padding: 1rem;
    text-decoration: none;
    transition: border-color 200ms ease, transform 200ms ease;
  }

  .essay-card:hover {
    border-color: var(--accent-warm);
    transform: translateY(-2px);
  }

  .essay-card h3 {
    font-family: var(--font-display, 'Fraunces', serif);
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--text);
    margin: 0 0 0.5rem 0;
    line-height: 1.3;
  }

  .essay-card .claim {
    font-size: 0.8rem;
    color: var(--muted);
    line-height: 1.45;
    font-style: italic;
    margin: 0;
    flex-grow: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .essay-card .meta {
    font-size: 0.7rem;
    color: var(--accent-warm);
    margin-top: 0.75rem;
  }

  /* explore grid */
  .explore-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 0.75rem;
  }

  .explore-item {
    display: flex;
    flex-direction: column;
    padding: 0.75rem 1rem;
    border: 1px solid var(--border);
    border-radius: 6px;
    text-decoration: none;
    transition: border-color 200ms ease, background 200ms ease;
  }

  .explore-item:hover {
    border-color: var(--accent-warm);
    background: var(--bg-card);
  }

  .explore-item.accent {
    border-color: var(--accent-cool);
    background: var(--accent-cool-soft, rgba(90, 155, 143, 0.1));
  }

  .explore-item.accent:hover {
    background: var(--accent-cool-soft, rgba(90, 155, 143, 0.2));
  }

  .explore-name {
    font-weight: 600;
    font-size: 0.9rem;
    color: var(--text);
  }

  .explore-desc {
    font-size: 0.75rem;
    color: var(--muted);
  }

  /* vada card */
  .vada-card {
    padding: 1rem 1.25rem;
    background: var(--bg-card);
    border-radius: 8px;
    border: 1px solid var(--accent-cool);
  }

  .vada-card h3 {
    font-family: var(--font-display, 'Fraunces', serif);
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--text);
    margin: 0.25rem 0 0.5rem 0;
  }

  .vada-card p {
    font-size: 0.85rem;
    color: var(--muted);
    line-height: 1.45;
    margin: 0 0 0.75rem 0;
  }

  .vada-link {
    font-size: 0.9rem;
    font-weight: 500;
    color: var(--accent-cool);
    text-decoration: none;
  }

  .vada-link:hover {
    text-decoration: underline;
  }

  /* responsive */
  @media (max-width: 900px) {
    .bento-row {
      grid-template-columns: 1fr;
    }

    .featured-essays {
      grid-template-columns: 1fr;
    }

    .explore-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (max-width: 600px) {
    .explore-grid {
      grid-template-columns: 1fr 1fr;
    }

    .stats-compact {
      grid-template-columns: 1fr 1fr;
    }
  }
</style>
