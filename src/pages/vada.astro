    color: var(--muted);
  }

  .vada-intro p {
    margin-bottom: 1rem;
  }

  .vada-rule {
    color: var(--text);
    font-weight: 500;
  }

  .vada-types {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    max-width: 500px;
    margin: 0 auto;
  }

  .vada-type {
    padding: 1rem 1.25rem;
    background: var(--bg-card);
    border: 1px solid var(--glass-border);
    border-radius: 10px;
    font-size: 0.95rem;
    color: var(--text-soft);
  }

  .vada-type strong {
    color: var(--accent-cool);
  }

  .vada-rules-inline {
    text-align: center;
    font-size: 0.95rem;
    color: var(--muted);
    max-width: 500px;
    margin: 0 auto;
    line-height: 1.7;
  }

  .vada-status {
    text-align: center;
  }

  .status-live, .status-offline {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    border-radius: 100px;
    background: var(--bg-card);
    border: 1px solid var(--glass-border);
    font-size: 0.9rem;
  }

  .status-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }

  .status-dot.live {
    background: #22c55e;
    box-shadow: 0 0 8px #22c55e;
    animation: pulse-live 2s infinite;
  }

  .status-dot.offline {
    background: var(--muted);
  }

  @keyframes pulse-live {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .vada-options {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .vada-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1.25rem 2rem;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.2s ease;
    cursor: pointer;
    border: none;
    font-family: inherit;
