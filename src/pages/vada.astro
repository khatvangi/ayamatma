<style>
  .vada-sutra {
    font-family: 'Fraunces', Georgia, serif;
    font-size: 1.3rem;
    color: var(--accent-warm);
    margin-bottom: 0.25rem;
  }

  .vada-translit {
    font-size: 0.95rem;
    font-style: italic;
    color: var(--muted);
  }

  .room-action {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1.5rem;
    max-width: 400px;
    margin: 0 auto;
  }

  .room-create, .room-join, .voice-alternative {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .room-divider {
    display: flex;
    align-items: center;
    gap: 1rem;
    width: 100%;
    color: var(--muted);
    font-size: 0.9rem;
  }

  .room-divider::before,
  .room-divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--glass-border);
  }

  .room-join {
    display: flex;
    flex-direction: row;
    gap: 0.75rem;
    width: 100%;
  }

  #room-code-input {
    flex: 1;
    padding: 0.85rem 1rem;
    border: 1px solid var(--glass-border);
    border-radius: 10px;
    background: var(--bg-card);
    color: var(--text);
    font-family: 'JetBrains Mono', monospace;
    font-size: 1.1rem;
    text-align: center;
    text-transform: uppercase;
    letter-spacing: 0.15em;
  }

  #room-code-input::placeholder {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.9rem;
    text-transform: none;
    letter-spacing: normal;
    color: var(--muted);
  }

  #room-code-input:focus {
    outline: none;
    border-color: var(--accent-cool);
  }

  .action-hint {
    font-size: 0.8rem;
    color: var(--muted);
  }

  .vada-rules {
    background: var(--bg-card);
    border: 1px solid var(--glass-border);
    border-radius: 12px;
    padding: 1.5rem;
    max-width: 500px;
    margin: 0 auto;
  }

  .rule-header {
    font-size: 0.9rem;
    color: var(--muted);
    margin-bottom: 0.5rem;
  }

  .rule-main {
    font-size: 1rem;
    color: var(--text);
    font-weight: 500;
    margin-bottom: 1.25rem;
    line-height: 1.5;
  }

  .vada-types {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-bottom: 1.25rem;
  }

  .vada-type {
    font-size: 0.9rem;
    color: var(--text-soft);
    padding-left: 1rem;
    border-left: 2px solid var(--glass-border);
  }

  .vada-type strong {
    color: var(--accent-cool);
  }

  .rule-footer {
    font-size: 0.85rem;
    color: var(--muted);
    line-height: 1.6;
  }

  .vada-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.2s ease;
    cursor: pointer;
    border: none;
    font-family: inherit;
  }

  .vada-btn.primary {
    background: linear-gradient(135deg, var(--accent-cool) 0%, var(--accent-warm) 100%);
    color: white;
  }

  .vada-btn.secondary {
    background: var(--accent-cool);
    color: white;
    padding: 0.85rem 1.5rem;
  }

  .vada-btn.tertiary {
    background: var(--bg-card);
    border: 1px solid var(--glass-border);
    color: var(--text);
  }

  .vada-btn.video-btn {
    background: linear-gradient(135deg, #6366f1 0%, #8b5cf6 100%);
    color: white;
  }

  .vada-btn:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-soft);
  }

  .btn-icon {
    font-size: 1.25rem;
  }

  .btn-label {
    font-family: 'Fraunces', Georgia, serif;
    font-size: 1rem;
    font-weight: 500;
  }

  .vada-consent {
    text-align: center;
    font-size: 0.8rem;
    color: var(--muted);
    font-style: italic;
  }

  /* Voice modal */
  .voice-modal {
    display: none;
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.6);
    z-index: 1000;
    align-items: center;
    justify-content: center;
    padding: 1rem;
  }

  .voice-modal.open {
    display: flex;
  }

  .voice-modal-content {
    background: var(--bg-paper);
    border-radius: 16px;
    padding: 2rem;
    max-width: 320px;
    width: 100%;
    text-align: center;
    position: relative;
  }

  .modal-close {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    background: none;
    border: none;
    font-size: 1.5rem;
    cursor: pointer;
    color: var(--muted);
  }

  .voice-modal-content h3 {
    font-family: 'Fraunces', Georgia, serif;
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
  }

  .recorder {
    margin: 1rem 0;
  }

  .record-btn {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    border: 3px solid var(--accent-warm);
    background: var(--bg-card);
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    transition: all 0.2s ease;
  }

  .record-btn:hover {
    background: var(--accent-warm-soft);
  }

  .record-btn:active, .record-btn.recording {
    background: var(--accent-warm);
    transform: scale(0.95);
  }

  .record-icon {
    font-size: 1.5rem;
  }

  .recorder-status {
    font-size: 0.85rem;
    color: var(--muted);
    margin-top: 0.75rem;
  }
</style>

<script>
  function generateRoomCode() {
    const chars = 'ABCDEFGHJKLMNPQRSTUVWXYZ23456789';
    let code = '';
    for (let i = 0; i < 6; i++) {
      code += chars.charAt(Math.floor(Math.random() * chars.length));
    }
    return code;
  }

  // create private video room token
  function generateToken() {
    const chars = 'abcdefghjkmnpqrstuvwxyz23456789';
    let token = '';
    for (let i = 0; i < 16; i++) {
      token += chars.charAt(Math.floor(Math.random() * chars.length));
    }
    return token;
  }

  document.getElementById('create-video-room-btn')?.addEventListener('click', () => {
    const token = generateToken();
    window.location.href = `/vada/v/${token}`;
  });

  // Create room
  document.getElementById('create-room-btn')?.addEventListener('click', () => {
    const code = generateRoomCode();
    window.location.href = `/vada/room/${code}`;
  });

  // Join room
  const joinBtn = document.getElementById('join-room-btn');
  const codeInput = document.getElementById('room-code-input') as HTMLInputElement;

  joinBtn?.addEventListener('click', () => {
    const code = codeInput?.value.trim().toUpperCase();
    if (code && code.length >= 4) {
      window.location.href = `/vada/room/${code}`;
    } else {
      codeInput?.focus();
    }
  });

  codeInput?.addEventListener('keydown', (e) => {
    if (e.key === 'Enter') {
      joinBtn?.click();
    }
  });

  // Voice message modal
  const modal = document.getElementById('voice-modal');
  const openBtn = document.getElementById('voice-msg-btn');
  const closeBtn = document.getElementById('modal-close');
  const recordBtn = document.getElementById('record-btn');
  const recorderStatus = document.getElementById('recorder-status');

  openBtn?.addEventListener('click', () => modal?.classList.add('open'));
  closeBtn?.addEventListener('click', () => modal?.classList.remove('open'));
  modal?.addEventListener('click', (e) => {
    if (e.target === modal) modal.classList.remove('open');
  });

  let mediaRecorder: MediaRecorder | null = null;
  let audioChunks: Blob[] = [];

  let currentStream: MediaStream | null = null;

  async function startRecording() {
    try {
      const stream = await navigator.mediaDevices.getUserMedia({ audio: true });
      currentStream = stream;
      mediaRecorder = new MediaRecorder(stream);
      audioChunks = [];

      mediaRecorder.ondataavailable = (e) => audioChunks.push(e.data);

      mediaRecorder.onstop = async () => {
        const audioBlob = new Blob(audioChunks, { type: 'audio/webm' });
        if (recorderStatus) recorderStatus.textContent = 'Uploading...';

        try {
          const formData = new FormData();
          formData.append('audio', audioBlob, 'voice-message.webm');
          const response = await fetch('/api/voice-message', { method: 'POST', body: formData });
          const result = await response.json();

          if (result.success) {
            if (recorderStatus) recorderStatus.textContent = '‚úì Received. Thank you.';
            if (recordBtn) recordBtn.style.borderColor = '#22c55e';
          } else {
            if (recorderStatus) recorderStatus.textContent = 'Failed. Try again.';
          }
        } catch (err) {
          if (recorderStatus) recorderStatus.textContent = 'Failed. Try again.';
        }
        currentStream?.getTracks().forEach(track => track.stop());
        currentStream = null;
      };

      mediaRecorder.start();
      recordBtn?.classList.add('recording');
      if (recorderStatus) recorderStatus.textContent = 'Recording... release to stop';
    } catch (err) {
      if (recorderStatus) recorderStatus.textContent = 'Microphone access denied';
    }
  }

  function stopRecording() {
    if (mediaRecorder?.state === 'recording') {
      mediaRecorder.stop();
      recordBtn?.classList.remove('recording');
    }
  }

  // mouse events
  recordBtn?.addEventListener('mousedown', startRecording);
  recordBtn?.addEventListener('mouseup', stopRecording);
  recordBtn?.addEventListener('mouseleave', stopRecording);

  // touch events (mobile/tablet)
  recordBtn?.addEventListener('touchstart', (e) => {
    e.preventDefault();
    startRecording();
  });
  recordBtn?.addEventListener('touchend', (e) => {
    e.preventDefault();
    stopRecording();
  });
</script>
