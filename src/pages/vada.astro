  }

  .vada-invite {
    font-family: 'Fraunces', Georgia, serif;
    font-size: 1.2rem;
    font-weight: 500;
    color: var(--accent-warm);
    margin-top: 1.5rem !important;
  }

  .vada-status {
    text-align: center;
    padding: 1rem;
  }

  .status-live, .status-offline {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.5rem;
    border-radius: 100px;
    background: var(--bg-card);
    border: 1px solid var(--glass-border);
  }

  .status-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .status-dot.live {
    background: #22c55e;
    box-shadow: 0 0 8px #22c55e;
    animation: pulse-live 2s infinite;
  }

  .status-dot.offline {
    background: var(--muted);
  }

  @keyframes pulse-live {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.5; }
  }

  .status-text {
    font-size: 0.95rem;
    color: var(--text);
  }

  .vada-options {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .vada-btn {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 1.5rem 2rem;
    border-radius: 16px;
    text-decoration: none;
    transition: all 0.2s ease;
    min-width: 200px;
    cursor: pointer;
    border: none;
    font-family: inherit;
  }

  .vada-btn.primary {
    background: linear-gradient(135deg, var(--accent-cool) 0%, var(--accent-warm) 100%);
    color: white;
  }

  .vada-btn.secondary {
    background: var(--bg-card);
    border: 1px solid var(--glass-border);
    color: var(--text);
  }

  .vada-btn:hover {
    transform: translateY(-3px);
    box-shadow: var(--shadow-medium);
  }

  .btn-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

