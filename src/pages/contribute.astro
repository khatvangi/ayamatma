---
import BaseLayout from '../layouts/BaseLayout.astro';

const lang = 'en';
---

<BaseLayout title="Write With Us | Ayamatma" description="Jijñāsā is ānanda — the desire to know is bliss." lang={lang}>
  <section class="section sutra-section">
    <p class="sutra">जिज्ञासा आनन्दः</p>
    <p class="sutra-translit">Jijñāsā is ānanda.</p>
    <p class="sutra-meaning">The desire to know is bliss.</p>
  </section>

  <section class="section">
    <div class="cta-block">
      <a href="/essays" class="cta-link">
        <span class="cta-label">Enter</span>
        <span class="cta-desc">The joys of knowing</span>
      </a>
    </div>
  </section>
</BaseLayout>

<style>
  .sutra-section {
    text-align: center;
    padding: 4rem 1rem;
  }

  .sutra {
    font-family: 'Fraunces', Georgia, serif;
    font-size: clamp(2rem, 8vw, 3.5rem);
    font-weight: 400;
    color: var(--accent-warm);
    margin: 0 0 1rem 0;
    line-height: 1.3;
  }

  .sutra-translit {
    font-family: 'Fraunces', Georgia, serif;
    font-size: 1.4rem;
    font-style: italic;
    color: var(--text);
    margin: 0 0 0.5rem 0;
  }

  .sutra-meaning {
    font-family: 'DM Sans', sans-serif;
    font-size: 1.1rem;
    color: var(--muted);
    margin: 0;
  }

  .cta-block {
    text-align: center;
    padding: 2rem 0;
  }

  .cta-link {
    display: inline-flex;
    flex-direction: column;
    align-items: center;
    padding: 1.25rem 2.5rem;
    background: linear-gradient(135deg, var(--accent-cool) 0%, var(--accent-warm) 100%);
    border-radius: 12px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .cta-link:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .cta-label {
    font-family: 'Fraunces', Georgia, serif;
    font-size: 1.15rem;
    font-weight: 500;
    color: white;
    margin-bottom: 0.25rem;
  }

  .cta-desc {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.85);
  }
</style>
