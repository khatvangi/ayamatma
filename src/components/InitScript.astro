---
const script = `(() => {
  const root = document.documentElement;
  try {
    const storage = window.localStorage;
    const theme = storage.getItem('ayamatma-theme') || 'dark';
    root.dataset.theme = theme;
    const devanagari = storage.getItem('ayamatma-show-devanagari');
    root.dataset.showDevanagari = devanagari === null ? 'true' : devanagari;
    const iast = storage.getItem('ayamatma-show-iast');
    root.dataset.showIast = iast === null ? 'true' : iast;
  } catch (err) {
    root.dataset.theme = 'dark';
    root.dataset.showDevanagari = 'true';
    root.dataset.showIast = 'true';
  }
})();`;
---
<script is:inline>{script}</script>
