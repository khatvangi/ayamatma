---
import { getCollection } from 'astro:content';
import { sortByDateDesc } from '../lib/content';

const essays = sortByDateDesc(
  (await getCollection('essays')).filter((entry) => entry.data.lang === 'en')
).slice(0, 5); // show 5 most recent
---

<div class="recent-essays">
  <h3 class="recent-title">Recent Essays</h3>
  <div class="recent-track">
    {essays.map((entry) => (
      <a href={entry.data.paths.en} class="recent-card">
        <span class="recent-card-title">{entry.data.title}</span>
        <span class="recent-card-date">{entry.data.date}</span>
      </a>
    ))}
  </div>
</div>

<style>
  .recent-essays {
    margin: 2rem 0;
  }

  .recent-title {
    font-family: 'DM Sans', sans-serif;
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.15em;
    text-transform: uppercase;
    color: var(--accent-warm);
    margin-bottom: 1rem;
  }

  .recent-track {
    display: flex;
    gap: 1rem;
    overflow-x: auto;
    padding-bottom: 1rem;
    scroll-snap-type: x mandatory;
    -webkit-overflow-scrolling: touch;
  }

  .recent-track::-webkit-scrollbar {
    height: 4px;
  }

  .recent-track::-webkit-scrollbar-track {
    background: var(--border-light);
    border-radius: 2px;
  }

  .recent-track::-webkit-scrollbar-thumb {
    background: var(--accent-cool);
    border-radius: 2px;
  }

  .recent-card {
    flex: 0 0 auto;
    width: 220px;
    padding: 1rem 1.25rem;
    background: var(--bg-card);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid var(--glass-border);
    border-radius: 16px;
    scroll-snap-align: start;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    text-decoration: none;
    border-bottom: none;
    transition: transform 250ms cubic-bezier(0.16, 1, 0.3, 1), box-shadow 250ms ease, border-color 200ms ease;
    position: relative;
    overflow: hidden;
  }

  /* gradient accent on top */
  .recent-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--accent-warm), var(--accent-cool));
    opacity: 0.6;
  }

  .recent-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-medium);
    border-color: var(--accent-cool);
  }

  .recent-card:hover::before {
    opacity: 1;
  }

  .recent-card-title {
    font-family: 'Fraunces', Georgia, serif;
    font-size: 0.95rem;
    font-weight: 400;
    color: var(--text);
    line-height: 1.4;
  }

  .recent-card:hover .recent-card-title {
    color: var(--accent-cool);
  }

  .recent-card-date {
    font-size: 0.75rem;
    color: var(--muted);
  }

  @media (max-width: 720px) {
    .recent-card {
      width: 180px;
      padding: 0.85rem 1rem;
    }

    .recent-card-title {
      font-size: 0.85rem;
    }
  }
</style>
