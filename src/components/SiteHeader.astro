---
import ThemeToggle from './ThemeToggle.astro';
import LanguageSwitcher from './LanguageSwitcher.astro';

const { lang = 'en' } = Astro.props;
const base = lang === 'en' ? '' : `/${lang}`;
const nav = [
  { label: 'Primer', href: `${base}/primer` },
  { label: 'Essays', href: `${base}/essays` },
  { label: 'Dictionary', href: `${base}/dictionary` },
  { label: 'VƒÅda', href: `${base}/vada` },
  { label: 'Now', href: `${base}/now` },
];
---

<header class="container">
  <nav class="nav" aria-label="Primary">
    <a class="nav-brand" href={`${base}/`}>
      <img src="/images/logo-circle.png" alt="ayamatma" class="nav-logo" />
    </a>
    <div class="nav-links">
      {nav.map((item) => (
        <a href={item.href}>{item.label}</a>
      ))}
      <LanguageSwitcher lang={lang} />
      <ThemeToggle />
    </div>
  </nav>
</header>
