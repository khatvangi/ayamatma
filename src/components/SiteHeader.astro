---
const { lang = 'en' } = Astro.props;
const base = lang === 'en' ? '' : `/${lang}`;
const nav = [
  { label: 'Essays', href: `${base}/essays` },
  { label: 'Gita Path', href: `${base}/gita` },
  { label: 'Daily', href: `${base}/daily` },
  { label: 'Listen', href: `${base}/listen` },
  { label: 'Glossary', href: `${base}/glossary` },
  { label: 'Manifesto', href: `${base}/manifesto` },
  { label: 'Search', href: `${base}/search` },
];
---

<header class="container">
  <nav class="nav" aria-label="Primary">
    <a class="nav-brand" href={`${base}/`}>Ayamatma</a>
    <div class="nav-links">
      {nav.map((item) => (
        <a href={item.href}>{item.label}</a>
      ))}
    </div>
    <button class="button" type="button" data-theme-toggle aria-pressed="false">
      Light
    </button>
  </nav>
</header>
