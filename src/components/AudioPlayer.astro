---
const { src, title, duration } = Astro.props;
---

<div class="audio-player" data-audio-player>
  {title ? <div class="eyebrow">{title}</div> : null}
  <audio controls preload="metadata" src={src}></audio>
  <div class="audio-controls">
    {duration ? <span class="muted">{duration}</span> : null}
  </div>
  <slot />
</div>
