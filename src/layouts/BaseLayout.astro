---
import '../styles/base.css';
// THEME: change this line to switch themes
// options: theme-subtle, theme-bold, theme-organic, theme-editorial, theme-zen
import '../styles/theme-zen.css';

import SiteHeader from '../components/SiteHeader.astro';
import SiteFooter from '../components/SiteFooter.astro';
import AmbientPlayer from '../components/AmbientPlayer.astro';
import SplashScreen from '../components/SplashScreen.astro';

interface Props {
  title?: string;
  description?: string;
  lang?: string;
  showSplash?: boolean;
  image?: string;
  type?: string;
}

const {
  title = 'Ayamatma',
  description = 'Advaita Vedānta without the cults. Upaniṣadic truth with the rigor of science and clarity of honest argument.',
  lang = 'en',
  showSplash = false,
  image = '/images/og-card.png',
  type = 'website'
} = Astro.props;

const siteUrl = 'https://ayamatma.com';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).href;
const ogImageUrl = image.startsWith('http') ? image : `${siteUrl}${image}`;
const fullTitle = title === 'Ayamatma' ? 'Ayamatma — अयमात्मा ब्रह्म' : `${title} | Ayamatma`;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    <meta name="author" content="Ayamatma" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/images/apple-touch-icon.png" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImageUrl} />
    <meta property="og:site_name" content="Ayamatma" />
    <meta property="og:locale" content={lang === 'en' ? 'en_US' : lang} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalUrl} />
    <meta name="twitter:title" content={fullTitle} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImageUrl} />

    <!-- Additional SEO -->
    <meta name="theme-color" content="#2d7a6f" />
    <meta name="keywords" content="Advaita, Vedanta, Vedānta, Upanishads, Shankara, Sanskrit, philosophy, non-duality, Brahman, Atman, spirituality" />

    <!-- JSON-LD structured data for SEO -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": type === "article" ? "Article" : "WebSite",
      "name": fullTitle,
      "url": canonicalUrl,
      "description": description,
      "image": ogImageUrl,
      "inLanguage": lang,
      "publisher": {
        "@type": "Organization",
        "name": "Ayamatma",
        "url": siteUrl
      },
      ...(type === "article" ? { "headline": title, "author": { "@type": "Organization", "name": "Ayamatma" } } : {}),
      "potentialAction": {
        "@type": "SearchAction",
        "target": `${siteUrl}/search/?q={search_term_string}`,
        "query-input": "required name=search_term_string"
      }
    })} />

    <!-- Preconnect to external resources -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body>
    {showSplash && <SplashScreen />}
    <SiteHeader lang={lang} />
    <main class="container page">
      <slot />
    </main>
    <SiteFooter lang={lang} />
    <AmbientPlayer />
  </body>
</html>
